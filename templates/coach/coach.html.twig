{% extends 'base.html.twig' %}

{% block title %}Add Coach{% endblock %}

{% block body %}
    <h1>Add a new Coach</h1>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    
    <div class="form-group">
        {{ form_label(form.cin) }}
        {{ form_widget(form.cin) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.dateInscription) }}
        {{ form_widget(form.dateInscription) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.specialite) }}
        {{ form_widget(form.specialite) }}
    </div>
    
    {{ form_end(form) }}

    <hr>

    <h2>Delete a Coach by CIN</h2>
    <form action="{{ path('delete_coach') }}" method="post">
        <div class="form-group">
            <label for="cin">CIN</label>
            <input type="text" name="cin" id="cin" class="form-control" placeholder="Enter CIN to delete" required>
        </div>
        <button type="submit" class="btn btn-danger mt-3">Delete Coach</button>
    </form>
{% endblock %}
